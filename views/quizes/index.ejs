<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Quiz Edav</title>
    <link rel="shortcut icon" href="https://cdn3.iconfinder.com/data/icons/brain-games/128/Puzzle.png" />
  </head>
  <body>
    <h2>Quiz Edav</h2>
    <table>
      <% var i; for (i=0; i<quizes.length; i++) { %>
       <tr>
         <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
         <% if (session.user) {
           if (session.user.isAdmin || (session.user.id === quizes[i].UserId)) { %>
             <td><a href="/quizes/<%= quizes[i].id %>/edit"><button> Editar</button></a></td>
             <td>
                <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
                  <button type="submit" onClick="return confirm('Comfirme que desea borrar: <%= quizes[i].pregunta %> - <%= quizes[i].respuesta %>');">
                    Borrar
                  </button>
                </form>
              </td>
            <% }
          } %>
       </tr>
      <% } %>
    </table>
    <% if (session.user) { %>
      <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
    <% } %>
  </body>
</html>
